{% if not description %}{% set description = sitemeta.description | sanitizeHtmlAttr %}{% endif %}
{% if (permalink == '/') or not title %}{% set docTitle = sitemeta.title %}{% else %}{% set docTitle = [title, sitemeta.title] | join(" | ") %}{% endif %}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="{{ description }}" />
  {% block ogmeta %}{% endblock %}
  <title>{{ docTitle }}</title>
  <link rel="stylesheet" href="/css/index{{ hash.css.index }}.css" media="screen" />
  {% if pageCss %}<link rel="stylesheet" href="/css/{{ pageCss }}{{ hash.css[pageCss] }}.css" media="screen" />{% endif %}
  {% if hash.js.index != "" %}<script src="/js/index{{ hash.js.index }}.js" defer></script>{% endif %}
  {% if sitemeta.favicon %}{% favicons sitemeta.favicon %}{% endif %}
</head>
<body>
  {{ content | safe }}
</body>
</html>